<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/prop_name_mark_in_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/map_container_mark_in_S"
        android:layout_width="match_parent"
        android:layout_height="300dp">
    </FrameLayout>

    <Button
        android:id="@+id/create_new_marker_in_situ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_new_marker_in_situ"/>

    <Button
        android:id="@+id/save_marker_in_situ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_marker_in_situ"/>

</LinearLayout>

