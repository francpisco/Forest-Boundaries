<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/prop_name_edit_markers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/create_new_marker_edit_markers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_new_marker_b"/>

    <FrameLayout
        android:id="@+id/map_container_edit_markers"
        android:layout_width="match_parent"
        android:layout_height="200dp">
    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/edit_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scrollbars="vertical"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/save_marker_floating_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="10dp"
        android:src="@drawable/ic_done_black_24dp"/>

    <Button
        android:id="@+id/delete_marker_edit_markers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete_marker_locate"/>

    <Button
        android:id="@+id/save_marker_edit_markers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_marker_locate"/>

    <Button
        android:id="@+id/close_polyline_edit_markers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/close_polyline"/>

    <Button
        android:id="@+id/save_edit_markers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/locate_finished_b"/>

</LinearLayout>
